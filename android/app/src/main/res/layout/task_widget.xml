<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="@drawable/widget_background">

    <!-- Заглавие -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 задачи"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="4dp" />

    <!-- Задача 1 -->
    <LinearLayout
        android:id="@+id/task_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/task_checkbox_1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_checkbox_unchecked"
            android:contentDescription="Complete"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/task_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Задача 2 -->
    <LinearLayout
        android:id="@+id/task_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/task_checkbox_2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_checkbox_unchecked"
            android:contentDescription="Complete"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/task_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Задача 3 -->
    <LinearLayout
        android:id="@+id/task_row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/task_checkbox_3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_checkbox_unchecked"
            android:contentDescription="Complete"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/task_title_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Празно състояние - иконка отгоре, текст отдолу -->
    <LinearLayout
        android:id="@+id/empty_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/empty_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_success"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All done!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>